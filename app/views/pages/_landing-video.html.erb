<div class="homepage-hero-module">
    <div class="video-container">
      <div class="filter"></div>
       <div class="col-sm-4 col-sm-offset-4 main-search-bar">
        <%= form_tag routes_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control style-text",
        placeholder: "Search a city to hike"
        %>
        <% end %>
      </div>
        <video autoplay loop class="fillWidth">
          <source src="<%= asset_path "landing-page-video.mp4" %>" type="video/mp4" />
          <source src="PATH_TO_WEBM" type="video/webm" />
        </video>
      <div class="poster hidden">
        <%= image_tag "landing-page-pic.jpg" %>
        </div>
    </div>
</div>
