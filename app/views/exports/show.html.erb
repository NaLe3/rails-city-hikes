<div class="export-background" style="background-image: url('<%= image_url 'background-city-trip-planning.jpg' %>');">
  <div class="container" >
    <div class="export-container">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="export" id="export-header"><h1>Export route</h1></div>
          <div class= "export" id="export-info">
            <h1><%= @route.name %></h1>
            <h3><%= @route.city.locality %></h3>
            <table class="export">
              <tbody class="export">
                <tr class="export">
                  <td class="export">Rating: 4.3 / 5</td>
                  <td class="export" style="text-align: right;">Distance: 5 km</td>
                </tr>
                <tr class="export">
                  <td class="export">Tags: #architectural #germany #historic #touristic</td>
                  <td class="export" style="text-align: right;">Time: 2 h</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="export-button-area">
            <a href=" <%= @gmaps_url %> " class="btn btn-danger export-maps">Go to Google Maps</a>
            <%= button_to "Send route to my email", route_send_route_email_path(@route), class: "btn btn-primary export-button" %>
            <%= button_to "Send route to my phone", route_send_route_phone_path(@route), class: "btn btn-primary export-button" %>
            <%= button_to "Copy route to clipboard", route_send_route_clipboard_path(@route), class: "btn btn-primary export-button" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <div id="share-header">
            <h3 style="text-align: center;">Share route with a friend</h3>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <%= form_tag(route_send_route_friend_path(@route), method: "post", class: "send-route-friend") do %>
          <%= email_field_tag(:friend_email, nil, placeholder: "Your friend's email") %>
          <%= text_field_tag(:friend_name, nil, placeholder: "Your friend's name") %>
          <br>
          <%= submit_tag("Send your route", class: "btn btn-primary") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
