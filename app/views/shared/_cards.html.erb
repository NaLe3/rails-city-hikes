<% @routes.each do |route| %>
<%= link_to(route_path(route)) do %>

  <div class="card">
    <div class="row">
      <div class="col-sm-12">
        <div class="card-image col-sm-6 col-sm-offset-0">
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
              <li data-target="#myCarousel" data-slide-to="1"></li>
              <li data-target="#myCarousel" data-slide-to="2"></li>
              <li data-target="#myCarousel" data-slide-to="3"></li>
              <!-- if more than 4 pics are uploaded, we have to define it...  -->
            </ol>

            <!-- @JOHNNY, you can add the pictures within the items, thanks ;)-->
            <div class="carousel-inner">
              <div class="carousel-image item active">
                <%= image_tag "landing-banner.jpg" %>
              </div>

              <div class="carousel-image item">
                <%= image_tag "landing-banner.jpg" %>
              </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          </div>
        <div class="card-details col-sm-offset-6">
          <div class="card-name"><%= route.name %></div>
          <div class="card-owner"> <p>by <%= route.user.first_name %></p></div>
          <div class="card-hashtags"><p>#foody #hipster #PLATZHALTER</p></div>
          <div class="card-description"><%= route.description %></div>
          <div class="route-details">
            <p id="route-length"><%= %>2.8km</p>
            <p id="route-duration"><%= %>3.5h</p>
            <p id="route-nr-exports"><%= %>exported 320 times</p>
            <p id="route-rating"><%= %>3/5 stars</p>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>
<% end %>
