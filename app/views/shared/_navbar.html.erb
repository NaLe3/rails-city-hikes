<div class="navbar-wagon">

  <!-- Logo on the left side-->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "city-hikes-logo-green-white.png" %>
  <% end %>

  <!-- Right Navigation -->
  <!-- Login and Sign up button on mobile and desktop if not logged in-->

  <% if !user_signed_in? %>
    <div class="navbar-login-buttons">
      <%= link_to "Login", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Sign up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    </div>
  <% end %>

  <!-- Find Route and Create Route only displayed on desktop, on mobile shown in dropdown -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "Find Route", routes_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Create Route", new_route_path, class: "navbar-wagon-item navbar-wagon-link" %>

  <!-- Profile picture with dropdown list -->
    <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <img  class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown" <%= cl_image_tag current_user.picture_url %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Dashboard", user_path(current_user) %></li>
            <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <% if user_signed_in? %>
    <div class="navbar-wagon-item hidden-md hidden-lg" id="navbar-wagon-dropdown-icon">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Find Route", routes_path %></li>
          <li><%= link_to "Create Route", new_route_path %></li>
          <li><%= link_to "Dashboard", user_path(current_user) %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
