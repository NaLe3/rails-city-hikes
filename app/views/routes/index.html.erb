<div class="container">
  <div class="row">
    <% @routes.each do |route| %>
      <%= link_to(route_path(route)) do %>
        <div class="col-sm-6 col-sm-offset-0">
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,60,20,0.6) 0%, rgba(0,36,80,0.6) 50%), url('<%= image_url 'card-example.jpg' %>');">
            <h4 class="card-id"><%= route.id %></h4>
            <h5 class="card-name"><%= route.name %></h5>
            <p class="card-description"><%= route.description %></p>
            <h5 class="card-owner"><%= route.user.first_name %></h5>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
