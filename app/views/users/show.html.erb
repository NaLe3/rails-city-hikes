<div class="background-image-profile" style="background-image: linear-gradient(-225deg, rgba(0,60,20,0.6) 0%, rgba(0,36,80,0.6) 50%), url(<%= image_url 'og-city-hikes.jpg' %>);">
  <div class="container">
    <div class="box_info">
      <div >
        <%= cl_image_tag @user.picture_url, height: 150, width: 200, crop: :fill, class: "profile_picture"%>
      </div>
      <div class="font-weight-bold">
          <p>name: <strong><%= @user.first_name %></strong> </p>
          <p>username: <strong><%= @user.username %></strong></p>
          <p>email: <strong><%= @user.email %></strong></p>
      </div>
    </div>
    <div class="buttons-new">
      <%= link_to "Edit profile", edit_user_path(current_user), class: "btn btn-primary btn-lg" %>
    </div>
      <!-- <li><%#= @user.picture_url %></li> -->

    <h3 class="title-profile">Owned routes</h3>
      <div class="box_info box-routes-profile">
      <% @routes.each do |route| %>
        <% if route.user == @user %>
          <%= link_to(route_path(route)) do %>
            <div class="col-sm-6 col-sm-offset-0">
              <div class="card card-profile" style="background-image: url('<%= image_url 'card-example.jpg' %>');">
                <!-- <div class="card-id"><%= route.id %></div> -->
                <p class="card-name"><%= route.name %></p>
              </div>
          <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

    <h3 class="title-profile">Your walked routes</h3>
    <div class="box_info box-routes-profile">
      <ul>
        <% @hiked_routes.each do |hiked_route| %>
        <li><%= hiked_route.name %></li>
        <li><%= hiked_route.description %></li>
        <li><%= hiked_route.city %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
